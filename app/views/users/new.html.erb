<h1>Signup!</h1>

<%= form_for :user, url: '/users' do |f| %>
<div class="form-group">
  <label for="Name">Name: 
  <input id="Name" class="form-control" placeholder="Enter Name" <%= f.text_field :name, required: true  %></input>
</div>
<div class="form-group">
  <label for="Email">Email:
  <input type="email" class="form-control" id="Email" placeholder="Enter Email"<%= f.email_field :email, required: true %></input>
    <small id="Email" class="form-text text-muted">We'll never share your email with anyone else.</small>
</div>
<div class="form-group">
  <label for="Password">Password:
  <input type="password" class="form-control" id="Password" placeholder="Enter Password"<%= f.password_field :password, required: true %></input>
</div>
<div class="form-group">
  <label for="Password_confimation">Password_confirmation:
  <input type="password" class="form-control" id="Password_confimation" placeholder="Enter Password"<%= f.password_field :password_confirmation, required: true %></input>
</div> 
  <%= f.submit "Submit" %>
<% end %>

